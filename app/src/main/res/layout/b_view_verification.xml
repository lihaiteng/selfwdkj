<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_operation_height"
        android:paddingLeft="@dimen/padding_side"
        android:paddingRight="@dimen/padding_side">

        <ImageView
            android:id="@+id/leftImg"
            android:layout_width="@dimen/item_side_img_size"
            android:layout_height="@dimen/item_side_img_size"
            android:src="@drawable/ic_launcher"
            android:layout_centerVertical="true"/>

        <Button
            android:id="@+id/codeBtn"
            android:layout_width="100dp"
            android:layout_height="@dimen/item_inner_height"
            android:layout_centerInParent="true"
            android:text="获取验证码"
            android:layout_alignParentRight="true"
            android:textColor="@color/item_left_text_color"
            android:textSize="@dimen/item_text_size"
            android:background="@drawable/b_viewregsin1_bg"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:id="@+id/leftText"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/item_inner_height"
            android:layout_toRightOf="@+id/leftImg"
            android:layout_marginLeft="10dp"
            style="@style/ItemText"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="验证码:"/>

        <EditText
            android:id="@+id/rightEditText"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_inner_height"
            android:layout_toRightOf="@+id/leftText"
            android:layout_toLeftOf="@+id/codeBtn"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="40dp"
            android:singleLine="true"
            style="@style/ItemEdit"
            android:paddingLeft="10dp"
            android:hint="请输入验证码"/>

    </RelativeLayout>

</RelativeLayout>