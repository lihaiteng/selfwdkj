<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:background="@color/white"
                android:weightSum="5">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/blacktext"
                    android:textSize="16sp"
                    android:gravity="left|center_vertical"
                    android:layout_weight="3"
                    android:text="会员类型"/>
                <TextView
                    android:id="@+id/menberTypeText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textColor="@color/graytext"
                    android:textSize="16sp"
                    android:layout_weight="3"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:background="@color/white"
                android:weightSum="5"
                android:layout_marginTop="1dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/blacktext"
                    android:textSize="16sp"
                    android:gravity="left|center_vertical"
                    android:layout_weight="3"
                    android:text="会费等级"/>
                <TextView
                    android:id="@+id/menberLevelText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textColor="@color/graytext"
                    android:textSize="16sp"
                    android:layout_weight="3"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:background="@color/white"
                android:weightSum="5"
                android:layout_marginTop="1dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/blacktext"
                    android:textSize="16sp"
                    android:gravity="left|center_vertical"
                    android:layout_weight="3"
                    android:text="状态"/>
                <TextView
                    android:id="@+id/menberStatuText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textColor="@color/graytext"
                    android:textSize="16sp"
                    android:layout_weight="1"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:background="@color/white"
                android:weightSum="5"
                android:layout_marginTop="1dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/blacktext"
                    android:textSize="16sp"
                    android:gravity="left|center_vertical"
                    android:layout_weight="3"
                    android:text="开通时间"/>
                <TextView
                    android:id="@+id/menberTimeText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textColor="@color/graytext"
                    android:textSize="16sp"
                    android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:background="@color/white"
                android:weightSum="5"
                android:layout_marginTop="1dp">
                <TextView
                    android:id="@+id/firstMoneyLeftText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/blacktext"
                    android:textSize="16sp"
                    android:gravity="left|center_vertical"
                    android:layout_weight="3"/>
                <TextView
                    android:id="@+id/moneyMonthSumText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textColor="@color/graytext"
                    android:textSize="16sp"
                    android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/secondMoneyLine"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:background="@color/white"
                android:weightSum="5"
                android:layout_marginTop="1dp"
                android:visibility="gone">
                <TextView
                    android:id="@+id/secondMoneyLeftText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/blacktext"
                    android:textSize="16sp"
                    android:gravity="left|center_vertical"
                    android:layout_weight="3"/>
                <TextView
                    android:id="@+id/twomoneyMonthSumText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textColor="@color/graytext"
                    android:textSize="16sp"
                    android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/jobnameLine"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:background="@color/white"
                android:weightSum="5"
                android:layout_marginTop="1dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/blacktext"
                    android:textSize="16sp"
                    android:gravity="left|center_vertical"
                    android:layout_weight="3"
                    android:text="职级"/>
                <TextView
                    android:id="@+id/jobNameText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textColor="@color/graytext"
                    android:textSize="16sp"
                    android:layout_weight="2"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/personSumLine"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:background="@color/white"
                android:weightSum="5"
                android:layout_marginTop="1dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/blacktext"
                    android:textSize="16sp"
                    android:gravity="left|center_vertical"
                    android:layout_weight="3"
                    android:text="推荐人数"/>
                <TextView
                    android:id="@+id/personSumText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textColor="@color/graytext"
                    android:textSize="16sp"
                    android:layout_weight="2"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>